<div class="designation-main-container">
  <%= render 'layouts/adminleftnav' %>
  <div class="employee-management-right-container">
    <h1 class="employees-management-heading">Employees Management</h1>
    <div class="employee-management-search-container">
      <%= link_to "Add New Eleave", new_eleafe_path,  class: "btn employee-management-add-employee-button" %>
      <form class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search Employee" aria-label="Search">
        <button class="btn employee-management-search-button" type="submit">Search</button>
      </form>
    </div>
    <div>
      <table class="table-container">
        <tr class="t-header-cotainer"></tr>
            <th>Name</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% @eleaves.each do |u| %>
            <tr class="t-sub-container">
                <td>
                <%= u.name %>
                </td>
                <td>
                <%= u.description %>
                </td>
                <td>
                <%= link_to "Edit", edit_eleafe_path(u), class: "btn btn-primary" %> 
                </td>   
                <td>
                <%= button_to "Delete", eleafe_path(u),  class: "btn btn-danger", method: :delete %>
                </td>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>