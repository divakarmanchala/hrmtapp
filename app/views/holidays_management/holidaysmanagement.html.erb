<div class="designation-main-container">
  <%= render 'layouts/adminleftnav' %>
  <div class="designation-form-main-container">
    <div class="designation-form-sub-container">
      <h1>Holidays Managment</h1>
      <%= form_with model:@holiday do |f| %>
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
      <div class="field">
        <%= f.label :date %><br />
        <%= f.date_field :date, autofocus: true, autocomplete: "description" %>
      </div>
      <div class="field">
        <%= f.label :year %><br />
        <%= f.text_field :year %>
      </div>
      <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="">
    <table class="table-container w-100 mt-0">
      <tr class="t-header-cotainer">
          <th class="t-header">Date</th>
          <th>Description</th>
      </tr>
      <% @upholidays.each do |h| %>
      
          <tr class="t-sub-container">
              <td>
              <%= h.date %>
              </td>
              <td>
              <%= h.name%>
              </td>
              
          </tr>
      <% end %>
    </table>
  </div>
</div>

