<div class="zensark-leaves-main-container">
  <%= render 'leftnavbar'%>
  <div class="leave-section-main-container">
    <div class="leaves-top-section">
      <div class="text-center">
        <h1 class="mt-3 leave-count-heading">21</h1>
        <p class="leave-count-description">Total Leaves</p>
      </div>
      <div class="text-center">
        <h1 class="mt-3 leave-count-heading">2</h1>
        <p class="leave-count-description">Applied Leaves</p>
      </div>
      <div class="text-center">
        <h1 class="mt-3 leave-count-heading">19</h1>
        <p class="leave-count-description">Available Leaves</p>
      </div>
    </div>
    <form action="" class="apply-leave-form-container">
      <div class="leave-heading-container">
        <h1 class="applye-leave-heading">Apply Leave</h1>
      </div>
      <hr>
      <div class="leave-bottom-container">
        <div class="leave-form-left-container">
          <div class="leave-field">
            <label for="leavetype">Leave Type</label>
            <select class="leave-types-select-container" id="leavetype" name="leavetype">
              <option value="option1">option 1</option>
              <option value="option2">option 2</option>
              <option value="option3">option 3</option>
              <option value="option4">option 4</option>
            </select>
          </div>
          <div class="from-to-main-container">
            <div class="from-container">
              <label for="from">From</label>
              <input class="from-to-input" type="date" id="from" name="from">
            </div>
            <div class="to-container">
              <label for="to">To</label>
              <input class="from-to-input" type="date" id="to" name="to">
            </div>
          </div>
          <div class="leave-mehthod-session-container">
            <div class="leave-method-container">
              <label for="leavetype">Leave Method</label>
              <select class="leave-types-select-container" id="leavetype" name="leavetype">
                <option value="option1">option 1</option>
                <option value="option2">option 2</option>
                <option value="option3">option 3</option>
                <option value="option4">option 4</option>
              </select>
            </div>
            <div class="leave-session-container">
              <label for="leavetype">Session</label>
              <select class="leave-types-select-container" id="leavetype" name="leavetype">
                <option value="option1">option 1</option>
                <option value="option2">option 2</option>
                <option value="option3">option 3</option>
                <option value="option4">option 4</option>
              </select>
            </div>
          </div>
        </div>
        <div class="leave-from-right-container">
          <div class="leaves-text-area-container">
            <label for="reason">Reason (optional)</label>

            <textarea id="reason" name="w3review" rows="5" cols="30">
            
            </textarea>
          </div>
          <div>
            <button class="leave-apply-button">Apply</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>